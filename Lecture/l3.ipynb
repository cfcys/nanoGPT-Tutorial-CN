   "source": [
    "weight = torch.tril(torch.ones(T, T))\n",
    "weight = weight / weight.sum(1, keepdim=True)  # 直接是在第一个维度上进行加和\n",
    "weight\n",
    "# 而在这个例子中的b，其实是x\n",
    "xbow2 = weight @ x  # (B,T,T) @ (B,T,C)   ------>   (B,T,C)\n",
    "torch.allclose(xbow,xbow2)   # 这个是用于检测两个张量是否在一定的容忍度内是相等的"
   ]
